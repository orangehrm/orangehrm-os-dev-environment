#!/bin/bash

PROJECT_DIR=$(realpath $(dirname $(readlink -f $0))/../)

if [[ "$(docker images -q orangehrm/os-dev:php71 2>/dev/null)" == "" ]]; then
    printf "Building the image...\n\n"
    docker-compose -f "$PROJECT_DIR/docker-compose.yml" -f "$PROJECT_DIR/docker-compose-legacy-services.yml" -f "$PROJECT_DIR/docker-compose-build.yml" build php-7.1 nginx
fi

docker-compose -f "$PROJECT_DIR/docker-compose.yml" -f "$PROJECT_DIR/docker-compose-legacy-services.yml" up -d php-7.1
